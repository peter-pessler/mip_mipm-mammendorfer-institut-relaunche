{# ###################################################################################################### #}
{% set settings = {
    '0-1500' : {
        'size' : '1060x327',
        'mode' : 'crop'
    },
    '1-1200' : {
        'size' : '850x263',
        'mode' : 'crop'
    },
    '2-900' : {
        'size' : '640x198',
        'mode' : 'crop'
    },
    '3-700' : {
        'size' : '500x145',
        'mode' : 'crop'
    },
    '4-500' : {
        'size' : '415x128',
        'mode' : 'crop'
    },
    '5-300' : {
        'size' : '345x107',
        'mode' : 'crop'
    },
} %}
{% set image = block.bild.one()|default(false) %}
{# -------------- Macro -------------- #}
{% import "_include-core/macros.twig" as _self %}
{# ###################################################################################################### #}
<div class="intromodul-startseite">

    <div class="grid-container content-grid-12">

            <div class="containerText-claim">
                {{ block.claim }}
            </div>

            <div class="containerText-headline">
                <h1 class="home">{{ block.headline | nl2br  }}</h1>
            </div>

            <div class="containerText-body">

                <div class="text">
                    {{ block.text }}
                </div>


                {% set button1 = block.button1|default(false) %}
                {% set button1Url = block.button1.getUrl() %}
                {% set button2 = block.button2|default(false) %}
                {% set button2Url = block.button2.getUrl() %}
                {% set button3 = block.button3|default(false) %}
                {% set button3Url = block.button3.getUrl() %}

                {% if button2Url != '' or button2Url != '' or button3Url != '' %}
                <div class="buttonIntro">
                    {% if button1 and button1Url != '' %}
                        <span class="buttonIntro1">
                        {% set button1 = block.button1|default(false) %}{% if button1 %}
                            {{ _self.linkList( button1, 'btn' ) | trim | raw  }}
                        {% endif %}
                        </span>
                    {% endif %}
                    {% if button2 and button2Url != '' %}
                    <span class="buttonIntro2">
                        {% set button2 = block.button2|default(false) %}{% if button2 %}
                                {{ _self.linkList( button2, 'btn' ) | trim | raw  }}
                            {% endif %}
                        </span>
                    {% endif %}
                    {% if button3 and button3Url != '' %}
                        <span class="buttonIntro3">
                        {% set button3 = block.button3|default(false) %}{% if button3 %}
                            {{ _self.linkList( button3, 'btn' ) | trim | raw  }}
                        {% endif %}
                        </span>
                    {% endif %}
                </div>
                {% endif %}

            </div>

            <div class="containerBild">
                {% if image %}
                    <div class="introbild">
                    {% include '_include-vendor/image-picture' with {class: 'intro-img', sourceMediaSettings: settings, image: image, imageSize: '1360x420', imageMode: 'crop'} %}
                    </div>
                {% endif %}
            </div>

    </div>

</div>


