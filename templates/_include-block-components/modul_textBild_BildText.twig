
        {# ###################################################################################################### #}
        {% set settings = {
            '0-1100' : {
                'size' : '370x218',
                'mode' : 'crop'
            },
            '1-700' : {
                'size' : '600x353',
                'mode' : 'crop'
            },
            '2-450' : {
                'size' : '374x220',
                'mode' : 'crop'
            }
        } %}
        {% set image = block.bild.one()|default(false) %}
        {% set modul = block.layoutWechsel.value %}



        {# MODUL TEXT / BILD #################################################################################### #}
        <div class="anchor" id="{{ 'anker' ~ blockid }}"></div>

        <section class="wrapper-outer modul-{{ modul }}">
            <section class="wl-wrapper">

                    <div class="grid-container content-grid-12">

                        {# MODUL TEXT / BILD #################################################################################### #}

                        {% if modul == 'bildText' %}

                        <div class="muster">
                            <div class="muster-img">
                            </div>
                        </div>

                        <div class="containerText-headline">
                            <h2>{{ block.headline }}</h2>
                        </div>

                        <div class="containerText-body text">
                            {{ block.text }}
                        </div>

                        <div class="containerBild">
                            {% if image %}
                                <div class="modulbild">
                                    {% include '_include-vendor/image-picture.twig' with {class: 'modul-img', sourceMediaSettings: settings, image: image, imageSize: '786x463', imageMode: 'crop'} %}
                                </div>
                            {% endif %}
                        </div>

                        {% else %}

                        {# MODUL BILD / TEXT #################################################################################### #}

                        <div class="containerText-headline">
                            <h2>{{ block.headline }}</h2>
                        </div>

                        <div class="containerText-body text">
                            {{ block.text }}
                        </div>

                        <div class="containerBild">
                            {% if image %}
                                <div class="modulbild">
                                    {% include '_include-vendor/image-picture' with {class: 'modul-img', sourceMediaSettings: settings, image: image, imageSize: '786x463', imageMode: 'crop'} %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="muster">
                                <div class="muster-img">
                                </div>
                        </div>

                        {% endif %}

                    </div>

            </section>
        </section>
